<!-- Outer Row -->
<div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-2">Şifreni Yenile</h1>
                                <p class="mb-4">Aşağıdaki formdan şifrenizi yenileyin.</p>

                                    <% if (locals.auth_errors != undefined || locals.auth_success != undefined || locals.login_error != undefined) { %>
                                        <%- include('../partials/_validateErrorMsg') %> 
                                     <% } %>
                            </div>
                            <form class="user" action="/new-pass" method="POST">
                                <div class="form-group">
                                    <input type="password" name="pass" class="form-control form-control-user" id="exampleInputEmail"
                                        aria-describedby="emailHelp" placeholder="Yeni Şifreniz">
                                </div>
                                <div class="form-group">
                                    <input type="password" name="repass" class="form-control form-control-user" id="exampleInputEmail"
                                        aria-describedby="emailHelp" placeholder="Yeni Şifreniz Tekrar">
                                </div>
                                <input type="hidden" name="id" value="<%-id%>">
                                <input type="hidden" name="token" value="<%-token%>">
                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Şifremi Güncelle
                                </button>
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="/register">Yeni Hesap Oluştur !</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="/login">Zaten bir hesabınız var mı? Giriş Yap !</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>