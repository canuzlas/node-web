<%- include('../defaultPartials/middleHeader.ejs') %> 
<section style="margin-top: 30px !important" id="form"><!--form-->
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-offset-3">
                <% if (locals.auth_errors != null || locals.auth_success != null) { %>
                    <%- include('../partials/_validateErrorMsg.ejs')%> 
                <% } %>
            </div>
            
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form"><!--login form-->
                    <h2><b>Hesabınla Giriş Yap</b></h2>
                    <form action="/login" method="POST">
                        <input name="email" type="email" placeholder="Email"/>
                        <input name="pass" type="password" placeholder="Şifreniz"/>
                
                        <button type="submit" class="btn btn-default">Giriş</button>
                    </form>
                </div><!--/login form-->
            </div>
            <div class="col-sm-1">
                <h2 class="or">Yada</h2>
            </div>
            <div class="col-sm-4">
                <div class="signup-form"><!--sign up form-->
                  
                    <h2><b>Hesabın yoksa kaydol !</b></h2>
                    <form action="/register-me" method="POST">
                        <div class="row">
                            <div class="col-sm-6">
                                <input value="<%- form_input[0] != null ? form_input[0] : ''%>" name="ad" type="text" placeholder="Ad"/>
                            </div>
                            <div class="col-sm-6">
                                <input value="<%- form_input[1] != null ? form_input[1] : ''%>" name="soyad" type="text" placeholder="SoyAd"/>
                            </div>
                        </div>
                        <input value="<%- form_input[2] != null ? form_input[2] : ''%>" name="email" type="email" placeholder="Email Adresi"/>
                        <div class="row">
                            <div class="col-sm-6">
                                <input name="pass" type="password" placeholder="Şifre"/>
                            </div>
                            <div class="col-sm-6">
                                <input name="repass" type="password" placeholder="Şifre Tekrarı"/>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-default">Kaydol</button>
                    </form>
                </div><!--/sign up form-->
            </div>

            <div style="margin-top: 45px !important; font-size: 20px;" align="center" class="col-md-12">
                <b>Dilersen Farklı Hesaplarınla Giriş Yapabilirsin !</b>
            </div>

            <div style="margin-top: 25px !important; font-size: 20px;" align="center" class="col-md-12">
                <a style="text-decoration: none ; color: inherit"  href="/auth/google"><button class="btn btn-danger btn-lg"><i class="fab fa-google"></i></button></a>
                <a style="text-decoration: none; color: inherit" href="/auth/facebook"><button class="btn btn-success btn-lg"><i class="fab fa-facebook"></i></button></button></a>
            </div>
        </div>
    </div>
</section><!--/form-->
<%- include('../defaultPartials/footer.ejs') %>
