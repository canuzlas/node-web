<!-- Outer Row -->
<div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Hoş Geldin</h1>
                                <p class="text-center">Mail hesabınıza gelen doğrulama kodunu giriniz.</p>
                                <% if (locals.auth_errors !=null || locals.auth_success !=null) { %>
                                    <%- include('../partials/_validateErrorMsg.ejs')%>
                                        <% } %>
                            </div>
                            <form class="user" action="/check/check" method="POST">
                                <div class="form-group">
                                    <input type="text" name="checkcode" class="form-control form-control-user"
                                        id="exampleInputEmail" aria-describedby="emailHelp"
                                        placeholder="Kodu Girin">
                                </div>
                              


                                <button type="submit" class="btn btn-primary btn-user btn-block" data-toggle="modal"
                                    data-target="#exampleModal">
                                    Doğrula
                                </button>

                            </form>
                            <hr>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>