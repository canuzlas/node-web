<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
            <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
            <div class="col-lg-7">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Ücretsiz Bir Hesap Oluştur !</h1>
                        <% if (locals.auth_errors !=null) { %>
                            <%- include('partials/_validateErrorMsg.ejs')%>
                                <% } %>
                    </div>
                    <form class="user was-validated" method="POST" action="/register-me">
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input required value="<%- form_input[0] != null ? form_input[0] : ''%>"
                                    placeholder='Adınız' type="text" name="ad" class="form-control form-control-user"
                                    id="exampleFirstName">
                            </div>
                            <div class="col-sm-6">
                                <input required value="<%- form_input[1] != null ? form_input[1] : ''%>"
                                    placeholder='SoyAdınız' type="text" name="soyad"
                                    class="form-control form-control-user" id="exampleLastName">
                            </div>
                        </div>
                        <div class="form-group">
                            <input required value="<%- form_input[2] != null ? form_input[2] : ''%>"
                                placeholder='Email Adresiniz' type="email" name="email"
                                class="form-control form-control-user" id="exampleInputEmail">
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input required type="password" name="pass" class="form-control form-control-user"
                                    id="exampleInputPassword" placeholder="Şifreniz">
                            </div>
                            <div class="col-sm-6">
                                <input required type="password" name="repass" class="form-control form-control-user"
                                    id="exampleRepeatPassword" placeholder="Şifre Tekrarı">
                            </div>
                        </div>
                        <button type="button" class="btn btn-primary btn-user btn-block"  data-toggle="modal" data-target="#exampleModal">
                            Hesabı Oluştur
                        </button>
                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
                                    aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel" >Robot Kontrol</h5>
                                                <button type="button" class="close" data-dismiss="modal"
                                                    aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div align="center" class="modal-body">
                                               <img style="height: 200px !important" class="img-fluid" src="/admin/img/robot-check.png" alt="">
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-dismiss="modal">Robotum</button>
                                                <button type="submit" class="btn btn-primary">Kaydol</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        <div class="mt-1 mb-1" align='center'><b>yada</b></div>

                        <a href="/auth/google" class="btn btn-google btn-user btn-block">
                            <i class="fab fa-google fa-fw"></i> Google ile Kaydol
                        </a>
                        <a href="/auth/facebook" class="btn btn-facebook btn-user btn-block">
                            <i class="fab fa-facebook-f fa-fw"></i> Facebook ile Kaydol
                        </a>
                       <!--  <a style="background-color: #BC0093; color: white;" href="/auth/instagram"
                            class="btn btn-instagram btn-user btn-block">
                            <i class="fab fa-instagram"></i> İnstagram ile Kaydol
                        </a> -->
                    </form>
                    <hr>
                    <div class="text-center">
                        <a class="small" href="/forgot">Şifreni mi unuttun?</a>
                    </div>
                    <div class="text-center">
                        <a class="small" href="/login">Hesabın var mı? Giriş Yap!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>